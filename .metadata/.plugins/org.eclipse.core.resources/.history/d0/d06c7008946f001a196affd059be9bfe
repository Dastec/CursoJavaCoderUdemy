package controleexercicios;

import java.util.Scanner;

public class Exercicio03 {
	public static void main(String[] args) {
		

	
	Scanner entrada = new Scanner(System.in);
	
	
	System.out.print("Você deseja entrar no programa? s/n: ");
	String resp = entrada.next();
	
	
	while(!resp.equalsIgnoreCase("sair"))
	{
	if (resp.equalsIgnoreCase("s"))
	{
		System.out.print("Digite a nota da NP1: ");
		double np1 = entrada.nextDouble();
		
		System.out.print("Digite a nota da NP2: ");
		double np2 = entrada.nextDouble();
		
		double media = (np1 + np2)/2;
		
		if(media >= 7)
		{
			System.out.printf("Sua média foi %.2f",media);
			System.out.println("Aprovado");
		}
		else if (media >=4 && media < 7)
		{
			System.out.printf("Sua média foi %.2f",media);
			System.out.println("Recuperação");
		}
		else
		{
			System.out.printf("Sua média foi %.2f",media);
			System.out.println("Reprovado");
		}
		
	}
	else if (resp.equalsIgnoreCase("n"))
		{
		System.out.println("Certo, você digitou n, caso decida entrar mais tarde, reinicie o programa!");
		break;
		}
	else 
		{
		System.out.println("Comando não encontrado!\nVocê deve digitar s ou n! ");
		continue;
		}
	System.out.print("Deseja continuar s/n: ");
	
	}
	
	entrada.close();
	
	}

}
