package classe;

import java.util.Scanner;

public class Produto {

    int idproduto;
    String nome;
    String descricao;
    double preco;
    double desconto;
    int quantidade;
    int vendidos;
    int estoque;
    
    Scanner entrada = new Scanner(System.in);
    Scanner entradanum = new Scanner(System.in);
    
    //------------------------------------------------------------------------
    int idProdutoFinal() {
    	System.out.print("Digite o código do produto: ");
    	idproduto = entradanum.nextInt();
    	return idproduto;
    }
    //------------------------------------------------------------------------
    String nomeFinal() {
    	System.out.print("\nDigite o nome do produto: ");
    	nome = entrada.nextLine();
    	return nome;
    }
    //------------------------------------------------------------------------
    String descricaoFinal() {
    	System.out.print("\nDigite a descrição do produto: ");
    	descricao = entrada.nextLine();
    	return descricao;
    }
    //------------------------------------------------------------------------
    double precoFinal(){
    	System.out.print("\nDigite o valor do Produto: ");
    	preco = entradanum.nextDouble();
    	return preco;
    }
    //------------------------------------------------------------------------
    double descontoFinal(){
    	System.out.print("Desconto: ");
    	desconto = entradanum.nextDouble();
    	return desconto;
    }
    //------------------------------------------------------------------------
    int quantidadeFinal() {
    	System.out.print("\nDigite a quantidade de produtos deseja adicionar ao estoque: ");
    	quantidade = entradanum.nextInt();
    	return quantidade;
    }
    //------------------------------------------------------------------------
    	
    int vendidosFinal() {
    	vendidos = 20;
    	return vendidos;
    }
    
    
    
    

}//classe
