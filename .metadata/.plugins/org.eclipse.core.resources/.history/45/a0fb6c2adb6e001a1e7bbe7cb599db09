package controle;

import java.util.Scanner;

public class DesafioDiaSemana {
	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Escreva o dia da semana: ");
		String dia = entrada.next();
		System.out.println(dia);
		
		if (dia == "domingo")
		{
			System.out.println("1");
		}
		else if (dia == "segunda" || dia == "Segunda"||dia == "SEGUNDA")
		{
			System.out.println("2");
		}
		else if (dia == "terça"||dia == "Terça"||dia == "TERÇA")
		{
			System.out.println("3");			
		}
		else if (dia == "quarta"||dia == "Quarta"||dia == "QUARTA")
		{
			System.out.println("4");			
		}
		else if (dia == "quinta"||dia == "Quinta"||dia == "QUINTA")
		{
			System.out.println("5");			
		}
		else if (dia == "sexta"||dia == "Sexta"||dia == "SEXTA")
		{
			System.out.println("6");			
		}
		else if (dia == "sabado"||dia == "Sabado"||dia == "SABADO")
		{
			System.out.println("7");			
		}
	
		
		entrada.close();
		
	}

}
